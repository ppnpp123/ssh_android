<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="@string/terminal"
        app:titleTextColor="@color/on_primary" />

    <jackpal.androidterm.emulatorview.EmulatorView
        android:id="@+id/terminalView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:background="@color/terminal_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true" />

    <!-- 控制按钮行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:background="@color/surface">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/increaseFontButton"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:text="A+"
            android:textSize="10sp"
            android:padding="0dp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/decreaseFontButton"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:text="A-"
            android:textSize="10sp"
            android:padding="0dp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/customCmdButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="快捷命令"
            android:textSize="10sp"
            android:paddingHorizontal="8dp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/keyboardButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="键盘"
            android:textSize="10sp"
            android:paddingHorizontal="8dp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/disconnectButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/disconnect"
            android:textSize="10sp"
            android:paddingHorizontal="8dp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

    </LinearLayout>

    <!-- 虚拟键盘行1: 方向键 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:background="@color/surface"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/homeButton"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:text="Home"
            android:textSize="10sp"
            android:padding="0dp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/endButton"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:text="End"
            android:textSize="10sp"
            android:padding="0dp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/escButton"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:text="Esc"
            android:textSize="10sp"
            android:padding="0dp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tabButton"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:text="Tab"
            android:textSize="10sp"
            android:padding="0dp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ctrlButton"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:text="Ctrl"
            android:textSize="10sp"
            android:padding="0dp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

    </LinearLayout>

    <!-- 虚拟键盘行2: 方向键 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="4dp"
        android:paddingVertical="4dp"
        android:background="@color/surface"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/upButton"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:text="↑"
            android:textSize="16sp"
            android:padding="0dp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/downButton"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:text="↓"
            android:textSize="16sp"
            android:padding="0dp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/leftButton"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:text="←"
            android:textSize="16sp"
            android:padding="0dp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/rightButton"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:text="→"
            android:textSize="16sp"
            android:padding="0dp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/enterButton"
            android:layout_width="64dp"
            android:layout_height="36dp"
            android:text="Enter"
            android:textSize="10sp"
            android:padding="0dp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

    </LinearLayout>

</LinearLayout>
